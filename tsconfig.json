{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      // ä¿æŒåŸæœ‰é…ç½®ï¼Œç”¨äº src æ–‡ä»¶å¤¹ä¸­çš„æ–‡ä»¶
      "@/*": ["./src/*"], 
      
      // ğŸ’¥ æ–°å¢ï¼šè§£å†³ @/types/prompt æ¨¡å—æŸ¥æ‰¾é—®é¢˜
      "@/types/*": ["./types/*"],
      
      // ğŸ’¥ æ–°å¢ï¼šè§£å†³ @/lib/supabaseService æ¨¡å—æŸ¥æ‰¾é—®é¢˜
      "@/lib/*": ["./lib/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": ["node_modules"]
}